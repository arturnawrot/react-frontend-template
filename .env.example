# Payload CMS Configuration
PAYLOAD_SECRET=your-payload-secret-here

# MongoDB Configuration
# These variables are used by docker-compose.yml to configure MongoDB authentication
MONGO_USERNAME=admin
MONGO_PASSWORD=your-secure-password-here
MONGO_DATABASE=payload
# Database URL
# Format: mongodb://username:password@host:port/database?authSource=admin
# For local Docker (use 'mongo' as hostname):
DATABASE_URL=mongodb://username:password@host:port/database?authSource=admin
# DATABASE_URL=mongodb://admin:your-secure-password-here@127.0.0.1:27017/payload?authSource=admin

BUILDOUT_API_KEY=
BUILDOUT_CACHE_TTL=624960
BUILDOUT_CACHE_ENABLED=true
# Redis Configuration (for Buildout API cache)
# For local Docker: redis://redis:6379
# For local (without Docker): redis://localhost:6379
REDIS_URL=redis://redis:6379
